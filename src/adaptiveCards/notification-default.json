{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "${subject}",
      "size": "Large",
      "weight": "Bolder",
      "wrap": true,
      "color": "attention"
    },
    {
      "type": "TextBlock",
      "text": "HyperSOC Security Operations",
      "isSubtle": true,
      "color": "Accent",
      "weight": "Bolder",
      "size": "Small",
      "spacing": "None"
    },
    {
      "type": "RichTextBlock",
      "inlines": [
        {
          "type": "TextRun",
          "text": "${bodyContent}",
          "isSubtle": false
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "${actionTitle}",
      "url": "${actionUrl}"
    }
  ]
}
